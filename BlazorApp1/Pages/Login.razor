@page "/login"
@layout SecondaryLayout

<!-- Include necessary CSS -->

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<style>
    /* Add box shadow when input field is focused */
    .form-control:focus,
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(116, 0, 116, 0.25);
    }

    /* Remove box shadow from login button */
    .btn-primary:focus {
        box-shadow: none;
    }
</style>

<!-- Login page content -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6" style="height: 100vh; background-image: url('images/img1.jpg'); background-size: cover; background-position:center;">
            <!-- Image section with the same size as the login form container -->
            <div class="back-button-container" style="position: absolute; top: 20px; left: 20px;">
                <a href="/" style="color: white; text-decoration: none;"><i class="fas fa-arrow-left"></i></a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
                <!-- Centered login form container -->
                <div class="login-container" style="width: 400px; height: 500px; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);">
                    <div class="card h-100">
                        <div class="card-body">
                            <!-- Pills navs -->
                            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active mr-4" id="tab-login" @onclick="HandleLoginClick" role="tab"
                                            aria-controls="pills-login" aria-selected="true" style="background-color: #740074;">
                                        Login
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <NavLink class="nav-link" id="tab-signup" href="/signup" style="background-color:white; color:#740074">Sign Up</NavLink>
                                </li>
                            </ul>
                            <!-- Pills navs -->
                            <!-- Pills content -->
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                                    <form>
                                        <!-- Email input with icon -->
                                        <div class="input-group mb-5">
                                            <input type="email" id="loginName" class="form-control" placeholder="Email" required />
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>

                                        <!-- Password input with icon -->
                                        <div class="input-group mb-5">
                                            <input type="password" id="loginPassword" class="form-control" placeholder="Password" required />
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                        </div>

                                        <!-- Checkbox and Forgot password link -->
                                        <div class="row mb-4">
                                            <div class="col-md-6 d-flex justify-content-center">
                                                <div class="form-check mb-3 mb-md-0">
                                                    <input class="form-check-input custom-checkbox" type="checkbox" value="" id="loginCheck" checked />
                                                    <label class="form-check-label" for="loginCheck"> Remember me </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6 d-flex justify-content-center">
                                                <a href="#!" style="color: #6c757d; text-decoration: none;">Forgot password?</a>
                                            </div>
                                        </div>

                                        <!-- Submit button -->
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="background-color: #740074;">Sign in</button>

                                        <!-- Register link -->
                                        <div class="text-center">
                                            <p>Not a member? <NavLink href="/signup" style="color: #740074; text-decoration: none;">Register</NavLink></p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col d-flex justify-content-center">
                                    <a href=" https://www.google.com" class="mr-4" style="color: #740074;"><i class="fab fa-google fa-2x"></i></a>
                                    <a href="https://www.github.com" class="mr-4" style="color: #740074;"><i class="fab fa-github fa-2x"></i></a>
                                    <a href="https://www.facebook.com" class="mr-4" style="color: #740074;"><i class="fab fa-facebook fa-2x"></i></a>
                                    <a href="" style="color: #740074;"><i class="fab fa-slack fa-2x"></i></a>
                                </div>
                            </div>
                            <!-- Pills content -->
                        </div>
                    </div>
                </div>
                <!-- End centered login form container -->
            </div>
        </div>
    </div>
</div>

