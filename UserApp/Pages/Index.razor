@page "/index"
@layout SecondaryLayout

<style>
    .nav-item .nav-link {
        padding: 10px 20px; /* Restoring original padding */
        transition: all 0.3s ease;
        color: white;
        display: inline-block;
        background-color: transparent;
    }

    .nav-item .nav-link:hover {
        color: white;
        background-color: #f8f8f8; /* Off-white color */
        border-radius: 5px;
        box-shadow: 0 0 0 3px #00FFFF; /* Cyan border around the box */
    }

    .navbar {
        padding: 10px 20px; /* Restoring original padding for the navbar */
    }

    .navbar-brand img {
        height: 40px; /* Slightly larger logo size to match original navbar height */
        margin-top: -2px; /* Adjusting logo position to center */
    }

    .hero-section {
        height: 80vh;
        background-size: cover;
        background-position: center;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    .hero-section p {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/js/bootstrap.bundle.min.js"></script>

<!-- Navigation Bar -->
