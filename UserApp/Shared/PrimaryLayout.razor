@inherits LayoutComponentBase
@implements IDisposable
@inject NavigationManager NavigationManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Navbar styles */
        .navbar {
            background-color: #740074;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand a {
            color: #fff;
            font-weight: bold;
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

            .navbar-links a {
                color: #fff;
                text-decoration: none;
                padding: 8px 12px;
                margin-right: 10px;
                border-radius: 5px;
                background-color: #740074;
                font-family: 'Poppins', sans-serif;
            }

                .navbar-links a.login, .navbar-links a.signup {
                    color: #740074;
                    background-color: #fff;
                    border: 1px solid #740074;
                    border-radius: 5px;
                    height: 40px;
                    width: 120px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    text-decoration: none;
                }

                    .navbar-links a:hover, .navbar-links a.login:hover, .navbar-links a.signup:hover {
                        background-color: #fff;
                        color: #740074;
                    }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #740074;
            min-width: 160px;
            z-index: 1;
            border-radius: 5px;
        }

            .dropdown-content a {
                color: #fff;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    text-decoration: underline;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-btn {
            color: #fff;
            background-color: #740074;
            border: none;
            border-radius: 5px;
            height: 40px;
            width: 140px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            cursor: pointer;
            padding: 8px 12px;
            margin-right: 10px;
            font-family: 'Poppins', sans-serif;
        }

            .dropdown-btn:hover {
                background-color: #8c007e;
                color: #fff;
            }

        .dropdown-content a:hover {
            background-color: #740074;
            color: #fff;
            text-decoration: underline;
        }

        .avatar {
            font-size: 30px;
            color: white;
            border-radius: 50%;
            background-color: #740074;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="brand">
            <i class="fas fa-calendar-alt" style="font-size: 30px; color: white; background-color: #740074; padding: 10px;"></i>
            <a href="/">eventSync</a>
        </div>
        <div class="navbar-links">
            <a href="/">Home</a>
            @if (Session.LoggedIn)
            {
                <a href="/find-events">Find Events</a>
                <a href="/event-registration">Create Events</a>
            }
            else
            {
                <a href="/login">Find Events</a>
                <a href="/login">Create Events</a>
            }
            <a href="/about-us">About Us</a>
            <div class="dropdown">
                <button class="dropdown-btn">Help Center <i class="fas fa-caret-down" style="margin-left: 5px;"></i></button>
                <div class="dropdown-content">
                    <a href="helpCenter">Help Center</a>
                    <a href="my-tickets">My Tickets</a>
                    
                </div>
            </div>
        </div>
        <div class="navbar-links">
            @if (Session.LoggedIn)
            {
                <div class="dropdown">
                    <div class="avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <div class="dropdown-content">
                        <div>@Session.CurrentUser.FullName</div>
                        <div>@Session.CurrentUser.Email</div>
                        <button class="logout-button" @onclick="Logout">Logout</button>
                    </div>
                </div>
            }
            else
            {
                <a href="/login" class="login">Login</a>
                <a href="/signup" class="signup">Signup</a>
            }
        </div>
    </div>

    <div class="content">
        @Body
    </div>
    <footer class="text-center text-lg-start mt-5" style="background-color: #740074; color: white">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            <!-- Left -->
            <div class="me-5 d-none d-lg-block">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Left -->
            <!-- Right -->
            <div>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-center text-md-start mt-5">
                <!-- Grid row -->
                <div class="row mt-3">
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>Company name
                        </h6>
                        <p>
                            Here you can use rows and columns to organize your footer content. Lorem ipsum
                            dolor sit amet, consectetur adipisicing elit.
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Products
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Angular</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">React</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Vue</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Laravel</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            Useful links
                        </h6>
                        <p>
                            <a href="#!" class="text-reset">Pricing</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Settings</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Orders</a>
                        </p>
                        <p>
                            <a href="#!" class="text-reset">Help</a>
                        </p>
                    </div>
                    <!-- Grid column -->
                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">Contact</h6>
                        <p><i class="fas fa-home me-3"></i> New York, NY 10012, US</p>
                        <p>
