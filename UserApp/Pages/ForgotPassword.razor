@page "/forgot-password"
@layout SecondaryLayout
@inject NavigationManager na

<PageTitle>Forgot Password</PageTitle>

<!-- Include necessary CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .form-control:focus,
    .input-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(116, 0, 116, 0.25);
    }

    .btn-primary:focus {
        box-shadow: none;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6" style="height: 100vh; background-image: url('images/img1.jpg'); background-size: cover; background-position:center;">
            <div class="back-button-container" style="position: absolute; top: 20px; left: 20px;">
                <a href="/" style="color: white; text-decoration: none;"><i class="fas fa-arrow-left"></i></a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
                <div class="reset-container" style="width: 400px; height: 500px; box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.1);">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="text-center" style="color: #740074;">Reset Password</h2>
                            <form @onsubmit="HandleResetSubmit">
                                <div class="input-group mb-5">
                                    <InputText id="userEmail" class="form-control" @bind-Value="email" placeholder="Email" required />
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <div class="input-group mb-5">
                                    <InputText id="newPassword" class="form-control" @bind-Value="newPassword" placeholder="New Password" type="password" required />
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="background-color: #740074;">Reset Password</button>
                                <div class="text-center">
                                    <p>Remembered? <NavLink href="/login" style="color: #740074; text-decoration: none;">Sign In</NavLink></p>
                                </div>
                                @if (!string.IsNullOrEmpty(errorMessage))
                                {
                                    <div class="alert alert-danger">@errorMessage</div>
                                }
                                @if (!string.IsNullOrEmpty(successMessage))
                                {
                                    <div class="alert alert-success">@successMessage</div>
                                }
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    string email;
    string newPassword;
    string errorMessage;
    string successMessage;
    private List<ModelUser> listUsers = new List<ModelUser>();

    protected override void OnInitialized()
    {
        listUsers = DbUser.GetUserInformation();
        base.OnInitialized();
    }

    private void HandleResetSubmit()
    {
        var user = listUsers.FirstOrDefault(u => u.Email == email);
        if (user != null)
        {
            DbUser.UpdateUserPassword(email, newPassword);
            successMessage = "Password has been reset successfully.";
            errorMessage = null;
        }
        else
        {
            errorMessage = "Email not found.";
            successMessage = null;
        }
    }
}
