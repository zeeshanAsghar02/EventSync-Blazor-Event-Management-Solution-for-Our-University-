@page "/"
@layout PrimaryLayout
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EventSync</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .event-icon-container {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .event-icon-wrapper {
            text-align: center;
            margin: 1rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .event-icon-card {
            padding: 2rem;
            border-radius: 10px;
            background-color: white;
            color: #6c757d;
            transition: transform 0.3s ease-in-out, background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .event-icon {
            font-size: 2.5rem;
            border: 1px solid #d0d7de;
            border-radius: 50%;
            padding: 1.5rem;
            color: inherit;
            transition: transform 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .event-icon-card:hover {
            transform: scale(1.1);
            background-color: #740074;
            color: white;
        }

        .event-icon-card:hover .event-icon {
            color: white;
            transform: scale(1.2);
        }

        .event-label {
            margin-top: 1rem;
            font-size: 1rem;
        }

        .image-section,
        .text-section {
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .image-section img {
            border-radius: 20px 0 0 20px;
            width: 100%;
            height: auto;
        }

        .text-section {
            font-family: 'Roboto', sans-serif;
            padding: 30px;
        }

        h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
            text-decoration: none; /* Remove underline from heading */
            color: #740074; /* Adjust heading color */
        }

        p {
            color: #666;
            font-size: 16px;
            line-height: 1.6;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }

        .interactive-paragraph {
            color: #740074;
            font-family: 'Arial', sans-serif;
            transition: color 0.3s ease;
            cursor: pointer;
            font-weight: bold;
        }

        .interactive-paragraph:hover {
            color: #8a2be2;
            cursor: pointer;
        }

        .event-card {
            margin-bottom: 20px;
        }

        .event-card .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .event-card .card-title {
            margin-bottom: 10px;
        }

        .event-card .event-info {
            font-size: 0.9rem;
            color: #6c757d;
        }

        .event-card .event-date,
        .event-card .event-location,
        .event-card .event-price {
            margin-bottom: 5px;
        }

        .event-card .event-footer {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .event-card .event-footer .followers {
            font-size: 0.8rem;
            color: #6c757d;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .event-card-hover .card-img-top {
            transition: transform 0.3s ease-in-out;
        }

        .event-card-hover:hover .card-img-top {
            transform: scale(1.1);
        }

    </style>
</head>

<body>

