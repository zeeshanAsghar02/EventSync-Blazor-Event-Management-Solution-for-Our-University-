@page "/signup"
@layout SecondaryLayout

<style>
    /* Custom style for input fields focus glow */
    .form-outline .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(116, 0, 116, 0.25); /* Change the color of the box shadow */
    }

    /* Remove box shadow for the signup button */
    .btn-primary.active,
    .btn-primary:active {
        box-shadow: none !important;
    }
</style>

<!-- Signup page content -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6" style="height: 100vh; background-image: url('images/img1.jpg'); background-size: cover; background-position:center;">
            <!-- Image section with the same size as the signup form container -->
            <div class="back-button-container" style="position: absolute; top: 20px; left: 20px;">
                <a href="/" style="color: white; text-decoration: none;"><i class="fas fa-arrow-left"></i></a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
                <!-- Centered signup form container -->
                <div class="signup-container" style="width: 400px; height: 500px; box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.2); background-color: #f8f9fa;">
                    <div class="card h-100">
                        <div class="card-body">
                            <!-- Pills navs -->
                            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <NavLink class="nav-link" href="/login" style="color: #740074;">Login</NavLink>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="tab-signup" data-mdb-pill-init @onclick="HandleSignupClick" role="tab"
                                            aria-controls="pills-signup" aria-selected="true" style="background-color:#740074">
                                        Sign Up
                                    </button>
                                </li>
                            </ul>
                            <!-- Pills navs -->
                            <!-- Pills content -->
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="pills-signup" role="tabpanel" aria-labelledby="tab-signup">
                                    <form>
                                        <!-- Name input -->
                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="text" id="signupName" class="form-control" placeholder="Name" />
                                        </div>

                                        <!-- Email input -->
                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="email" id="signupEmail" class="form-control" placeholder="Email" />
                                        </div>

                                        <!-- Password input -->
                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="password" id="signupPassword" class="form-control" placeholder="Password" />
                                        </div>

                                        <!-- Confirm Password input -->
                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="password" id="signupConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                        </div>

                                        <!-- Submit button -->
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4" style="background-color: #740074; border-color: #6c757d; color: #ffffff;">Sign Up</button>
                                    </form>

                                    <!-- Already have an account? Login link -->
                                    <div class="text-center">
                                        <p>Already have an account? <NavLink href="/login" style="color: #740074; text-decoration: none;">Login</NavLink></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Pills content -->
                        </div>
                    </div>
                </div>
                <!-- End centered signup form container -->
            </div>
        </div>
    </div>
</div>

