    <style>
        /* Navbar styles */
        .navbar {
            background-color: #740074;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brand a {
            color: #fff;
            font-weight: bold;
            text-decoration: none;
            font-family: 'Poppins', sans-serif;
        }

        .navbar-links {
            display: flex;
            align-items: center;
        }

        .navbar-links a {
            color: #fff;
            text-decoration: none;
            padding: 8px 12px;
            margin-right: 10px;
            border-radius: 5px;
            background-color: #740074;
            font-family: 'Poppins', sans-serif;
        }

        .navbar-links a.login, .navbar-links a.signup {
            color: #740074;
            background-color: #fff;
            border: 1px solid #740074;
            border-radius: 5px;
            height: 40px;
            width: 120px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
        }

        .navbar-links a:hover, .navbar-links a.login:hover, .navbar-links a.signup:hover {
            background-color: #fff;
            color: #740074;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #740074;
            min-width: 160px;
            z-index: 1;
            border-radius: 5px;
        }

        .dropdown-content a {
            color: #fff;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            text-decoration: underline;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-btn {
            color: #fff;
            background-color: #740074;
            border: none;
            border-radius: 5px;
            height: 40px;
            width: 140px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-decoration: none;
            cursor: pointer;
            padding: 8px 12px;
            margin-right: 10px;
            font-family: 'Poppins', sans-serif;
        }

        .dropdown-btn:hover {
            background-color: #8c007e;
            color: #fff;
        }

        .dropdown-content a:hover {
            background-color: #740074;
            color: #fff;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="brand">
            <i class="fas fa-calendar-alt" style="font-size: 30px; color: white; background-color: #740074; padding: 10px;"></i>
            <a href="/">eventSync</a>
        </div>
        <div class="navbar-links">
            <a href="/">Home</a>
            <a href="/find-events">Find Events</a>
            <a href="/event-registration">Create Events</a>
            <a href="/about-us">About Us</a>
            <div class="dropdown">
                <button class="dropdown-btn" style="font-family: 'Poppins', sans-serif; padding: 8px 12px; margin-right: 10px; background-color: #740074; color: #fff;" onmouseover="this.style.backgroundColor='#fff'; this.style.color='#740074';" onmouseout="this.style.backgroundColor='#740074'; this.style.color='#fff';">Help Center <i class="fas fa-caret-down" style="margin-left: 5px;"></i></button>
                <div class="dropdown-content">
                    <a href="#">Help Center</a>
                    <a href="#" >Find Your Tickets</a>
                    <a href="#" >Contact Your Event Organizer</a>
                </div>
            </div>
        </div>
        <div class="navbar-links">
            <a href="/login" class="login">Login</a>
            <a href="/signup" class="signup">Signup</a>
        </div>
    </div>

    <div class="content">
        @Body
    </div>

    <!-- You can include footer or other common elements here -->
    @code {
        [Parameter] public string Title { get; set; }
    }
</body>
