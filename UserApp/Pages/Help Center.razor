@page "/helpCenter"
@layout PrimaryLayout
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Help Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa; /* Light gray background */
        }

        .help-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .help-card:hover {
                transform: translateY(-5px); /* Move card slightly upwards on hover */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Increase shadow on hover */
            }

                .help-card:hover .card-title,
                .help-card:hover .card-text {
                    color: #740074; /* Change text color on hover */
                }

        .search-bar {
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .contact-form {
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Need Help?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card help-card">
                    <div class="card-body">
                        <h5 class="card-title">Getting Started</h5>
                        <p class="card-text">New to our app? Learn how to get started with our easy-to-follow guide.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card help-card">
                    <div class="card-body">
                        <h5 class="card-title">FAQs</h5>
                        <p class="card-text">Find answers to commonly asked questions about our app and its features.</p>
                        <a href="#" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card help-card">
                    <div class="card-body">
                        <h5 class="card-title">Contact Support</h5>
                        <p class="card-text">Need further assistance? Get in touch with our support team.</p>
                        <a href="#" class="btn btn-primary">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional Help Section -->
        <div class="mt-5">
            <h3 class="text-center mb-4">Additional Help</h3>

            <!-- Search Bar -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-8">
                    <div class="input-group search-bar">
                        <input type="text" class="form-control" placeholder="Search for help topics...">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="button">Search</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tutorials and Documentation Links -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card help-card">
                        <div class="card-body">
                            <h5 class="card-title">Tutorials</h5>
                            <p class="card-text">Watch our video tutorials to get a better understanding of our app.</p>
                            <a href="#" class="btn btn-primary">Watch Tutorials</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card help-card">
                        <div class="card-body">
                            <h5 class="card-title">Documentation</h5>
                            <p class="card-text">Read our comprehensive documentation for detailed information.</p>
                            <a href="#" class="btn btn-primary">Read Documentation</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="contact-form">
                        <h5 class="text-center mb-4">Still Need Help? Contact Us!</h5>
                        <form>
                            <div class="form-group">
                                <label for="contactName">Name</label>
                                <input type="text" class="form-control" id="contactName" placeholder="Enter your name">
                            </div>
                            <div class="form-group">
                                <label for="contactEmail">Email</label>
                                <input type="email" class="form-control" id="contactEmail" placeholder="Enter your email">
                            </div>
                            <div class="form-group">
                                <label for="contactMessage">Message</label>
                                <textarea class="form-control" id="contactMessage" rows="5" placeholder="Enter your message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
 
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
